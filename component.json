{
  "title": "Twitter Streaming Component",
  "description": "A component that speaks to twitter streaming API",
  "credentials": {
    "fields": {
      "consumerKey":{
        "viewClass":"TextFieldView",
        "label":"Consumer Key",
        "required": true
      },
      "consumerSecret":{
        "viewClass":"TextFieldView",
        "label":"Consumer Secret",
        "required": true
      },
      "accessTokenKey":{
        "viewClass":"TextFieldView",
        "label":"Access Token Key",
        "required": true
      },
      "accessTokenSecret":{
        "viewClass":"TextFieldView",
        "label":"Consumer Secret",
        "required": true
      }
    }
  },
  "triggers": {
    "mentions_timeline": {
      "title": "Firehouse Sample",
      "main": "./lib/triggers/firehouse_sample.js",
      "type": "polling",
      "fields": {
        "languages":{
          "viewClass":"TextFieldWithNoteView",
          "label": "Consumer Secret",
          "note": "Comma-separated list of BCP 47 language identifiers",
          "default": "en,de,fr,es",
          "required": true
        }
      },
      "metadata": {
        "out": "./lib/schemas/tweet.json"
      }
    }
  }
}
